local util = hell.utils

hell.outdir = 'build'
hell.help = [[
Wellcome to hell's hellfire build script!
=========================================

Please, note that hell is still under development, so many functionalities
may not exist, or be somewhat buggy.]]


copy {
	input = util.glob 'src/lua/*.lua'
}
copy {
	input = 'src/builders'
}
cpp.shared {
	input = util.glob 'src/cpp/*.cpp',
	flags = '-Wall -g -O2 -std=c++11',
	links = 'lua',
	output = 'cppUtils.so'
}
