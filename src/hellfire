-- if prefix is to be changed, do it first, please
if prefix then
	print (prefix, utils.shell ('sh changeInstallPath.sh ' .. prefix))
else
	prefix = hell.os.prefix
end

-- install paths
local libPrefix = libPrefix or utils.makePath ('lib', 'hell')
local exePrefix = exePrefix or 'bin'

-- lua
install (feedHellFire 'lua/hellfire', libPrefix)
-- builders
install (feedHellFire 'builders/hellfire', utils.makePath (libPrefix, 'builders'))
-- cpp
install (feedHellFire 'cpp/hellfire', libPrefix)
-- the hell executable
install (executable, exePrefix)
